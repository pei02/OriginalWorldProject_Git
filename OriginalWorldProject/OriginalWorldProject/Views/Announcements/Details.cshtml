@model OriginalWorldProject.Models.Announcement

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_BackstageLayoutStyle .cshtml";
}

<div class="form-group">
    <div class="row">
        <div class="col-md-10">
            <span class="text-fm text-white ts-36">公告內容</span>
        </div>
        <div class="col-md-2">
            <div class="col-md-4">
                @*@Html.ActionLink(" ", "Edit", new { id = @ViewBag.id }, new { @class = "btn-circle  btn-blue far fa-edit" })*@
                @Html.ActionLink(" ", "Edit", new { id = Model.Announcement_ID, Page = Request.QueryString["page"] }, new { @class = "btn-circle  btn-blue far fa-edit" })

            </div>
            <div class="col-md-4">
                @Html.ActionLink(" ", "Index", new { Page = Request.QueryString["page"] }, new { @class = "btn-circle btn-orange fas fa-reply" })
            </div>
        </div>
    </div>
</div>

<p class="border-bottom mb-5"></p>

<div class="card bg-dark_op text-white">
    <div class="card-body">
        <h3 class="card-title"><b>
    @{
        var tp = Model.Announcement_type_ID;

        switch (tp)
        {
            case "AT1":
                <span class="badge badge-purple">@Model.Announcement_type.Announcement_type1</span>
                break;
            case "AT2":
                <span class="badge badge-orange">@Model.Announcement_type.Announcement_type1</span>
                break;
            case "AT3":
                <span class="badge badge-pink">@Model.Announcement_type.Announcement_type1</span>
                break;
            case "AT4":
                <span class="badge badge-blue">@Model.Announcement_type.Announcement_type1</span>
                break;
        }
    }
    @Html.DisplayFor(model => model.Announcement_title)
</b>
    </h3>
        <p class="border-bottom border-secondary"></p>
        <p class="card-text">@Html.Raw(Model.Announcement_content.ToString().Replace("\n", "<br>"))</p>
        <p class="border-bottom border-light"></p>
        <b class="text-right"># @Model.Administrator.Adm_name</b><p class="card-text"><small class="text-white">@Model.Announcement_time.ToString("yyyy/MM/dd HH:mm")</small></p>
    </div>
</div>

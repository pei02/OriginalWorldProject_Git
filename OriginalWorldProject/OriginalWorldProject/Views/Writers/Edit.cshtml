@model OriginalWorldProject.Models.Writer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_BackstageLayoutStyle .cshtml";
    var W_status = Json.Encode(ViewBag.W_status);
}


@using (Html.BeginForm())
{
    
    <div class="form-group">
        <div class="row">
            <div class="col-md-10">
                <span class="text-fm text-white ts-36">編輯作家</span>
            </div>
            <div class="col-md-2">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <button type="submit" class="btn-circle btn-orange-y">
                        <i class="far fa-save"></i>
                    </button>
                </div>
                <div class="col-md-4">
                    @Html.ActionLink(" ", "Index", new { Page = Request.QueryString["page"] }, new { @class = "btn-circle btn-orange fas fa-reply" })
                </div>
            </div>
        </div>
    </div>

    <p class="border-bottom mb-5"></p>
    @Html.AntiForgeryToken()
    <div class="form-horizontal text-white">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.WriterID)

        <div class="form-group">
            @Html.LabelFor(model => model.Pseudonym, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="col-form-label">@Model.Pseudonym</label>
                <div hidden>
                    @Html.EditorFor(model => model.Pseudonym, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Pseudonym, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.W_status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label class="control-label">
                    <input type="checkbox" id="W_status" name="W_status" value="true" />
                    <label for="W_status">設為停權</label>
                    @Html.ValidationMessageFor(model => model.W_status, "", new { @class = "text-danger" })
                </label>
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.MemberID, "MemberID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.MemberID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MemberID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" hidden>
            @Html.LabelFor(model => model.Writer_application_ID, "Writer_application_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Writer_application_ID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Writer_application_ID, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    }



    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")

        <script>
        if (@Html.Raw(W_status)==true)
        $('#W_status').attr("checked", true);
        </script>
    }

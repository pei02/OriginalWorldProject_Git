    <div class="jumbotronx jumbotron-fluid jumb-h bg-op">
        <table class="w-100 h-100">
            <tr class="justify-content-center">
                <td class="col-1"></td>
                <td class="h-100">
                    <div class="w-75 h-50 bg-white-op rounded-125 justify-content-center">
                        <h3 class="text-orange text-center mt-1">
                            <img src="~/img/w-logo_icon.png" width="180" />
                        </h3>
                        <hr />
                        <div class="w-100 h-75  row align-content-center justify-content-center">
